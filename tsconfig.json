{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
    ],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist"
  },
  "include": [
    "./src",
    "./test",
  ],
  "exclude": [
    "node_modules/"
  ]
}
